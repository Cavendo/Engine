# Cavendo Engine Configuration

# API endpoint (local or cloud)
CAVENDO_URL=http://localhost:3001

# Your API key (get from Cavendo UI → Profile → API Keys)
# User key (acts as you): cav_uk_...
# Agent key (acts as AI agent): cav_ak_...
CAVENDO_AGENT_KEY=cav_uk_your_key_here

# Auto-claim next task when checking (true/false)
CAVENDO_AUTO_CLAIM=true

# Only auto-claim tasks at or above this priority (1=high, 2=medium, 3=low, 4=minimal)
CAVENDO_AUTO_CLAIM_PRIORITY_MIN=2

# Maximum concurrent tasks to handle
CAVENDO_MAX_CONCURRENT=3

# Notification settings (optional, for OpenClaw message tool)
CAVENDO_NOTIFY_CHANNEL=signal
CAVENDO_NOTIFY_TARGET=+1234567890

# Notify on deliverable submission (true/false)
CAVENDO_NOTIFY_ON_SUBMIT=true

# Minimum priority for notifications (1=high, 2=medium, 3=low, 4=minimal)
CAVENDO_NOTIFY_PRIORITY_MIN=2

# Quiet hours (no notifications during these times, 24-hour format)
CAVENDO_QUIET_START=22:00
CAVENDO_QUIET_END=08:00

# Model routing (which AI model to use for which priority)
# Options: anthropic/claude-opus-4-6, anthropic/claude-sonnet-4-6, anthropic/claude-haiku-4-5, openai/gpt-4o, openai/o1
CAVENDO_MODEL_HIGH=anthropic/claude-sonnet-4-6
CAVENDO_MODEL_MEDIUM=anthropic/claude-haiku-4-5
CAVENDO_MODEL_LOW=anthropic/claude-haiku-4-5
CAVENDO_MODEL_RESEARCH=openai/o1

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
