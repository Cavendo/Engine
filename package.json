{
  "name": "@cavendo/engine",
  "version": "0.1.1",
  "description": "Open-source agent workflow platform for AI-human collaboration",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run ui:dev\"",
    "server:dev": "nodemon server/index.js",
    "ui:dev": "cd ui && npm run dev",
    "start": "node server/index.js",
    "build": "cd ui && npm run build",
    "db:init": "node server/db/init.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "keywords": [
    "ai",
    "agents",
    "workflow",
    "human-in-the-loop",
    "mcp",
    "automation"
  ],
  "author": "CAVENDO",
  "license": "AGPL-3.0",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.991.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "nodemailer": "^8.0.1",
    "zod": "^3.22.4"
  },
  "optionalDependencies": {
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Cavendo/Engine.git"
  },
  "overrides": {
    "tar": "^7.5.7"
  }
}
